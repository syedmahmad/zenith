<div class="modal fade login" id="loginModal">
  <div class="modal-dialog login animated">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Login with</h4>
      </div>

      <div class="modal-body">
        <div class="box">
          <div class="content">
            <div class="social">
              <%= link_to user_linkedin_omniauth_authorize_url, class: 'circle linkedin' do %>
                <i class="fa fa-linkedin-square fa-fw"></i>
              <%- end %>

              <%= link_to user_twitter_omniauth_authorize_url, class: 'circle twitter' do %>
                <i class="fa fa-twitter fa-fw"></i>
              <%- end %>

              <%= link_to user_google_oauth2_omniauth_authorize_url, class: 'circle google' do %>
                <i class="fa fa-google-plus fa-fw"></i>
              <%- end %>

              <%= link_to user_facebook_omniauth_authorize_url, class: 'circle facebook' do %>
                <i class="fa fa-facebook fa-fw"></i>
              <%- end %>
            </div>

            <div class="division">
              <div class="line l"></div>
              <span>or</span>
              <div class="line r"></div>
            </div>

            <div class="message"></div>

            <div class="form loginBox">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'login-form' }, format: :json, remote: true) do |f| %>
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
                <%= f.submit "Log in", class: 'btn btn-default btn-submit' %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="box registerBox" style="display:none;">
          <div class="content">
            <div class="form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'signup-form' }, format: :json, remote: true) do |f| %>
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Repeat Password' %>
                <%= f.submit "Create account", class: 'btn btn-default btn-submit' %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="box forgotPasswordBox" style="display:none;">
          <div class="content">
            <div class="form">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { id: 'forgot-form', method: :post }, format: :json, remote: true) do |f| %>
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                <%= f.submit "Reset Password", class: 'btn btn-default btn-submit' %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="box unlockBox" style="display:none;">
          <div class="content">
            <div class="form">
              <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { id: 'unlock-form', method: :post }, format: :json, remote: true) do |f| %>
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                <%= f.submit "Resend Unlock Email", class: 'btn btn-default btn-submit' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <div class="forgot login-footer">
          <p>
            Looking to
            <a href="javascript: LoginService.showRegisterForm();">create an account</a>
            ?
          </p>
          <p>
            <a href="javascript: LoginService.showForgotPasswordForm();">Forgot password</a> ?
          </p>
          <p>
            <a href="javascript: LoginService.showUnlockForm();">Account locked</a> ?
          </p>
        </div>

        <div class="forgot register-footer" style="display:none">
          <span>Already have an account?</span>
          <a href="javascript: LoginService.showLoginForm();">Login</a>
        </div>
      </div>
    </div>
  </div>
</div>
