<div class="section-items col-md-12 col-xs-12 p0" data-section-name="Achievements">
  <section class="section-items-holder">
	  <div class="heading-area">
	     <h3>
	        <div class="form-group">
	           <input
	             type="string"
	             name="achievement_header"
	             class="form-control primary_font"
	             placeholder="ACHIEVEMENTS"
	             value="ACHIEVEMENTS"
	           />
	        </div>
	     </h3>
	  </div>
	  <div class="section-items-list">
	     <ul class="row mrl0">
			<% @achievements.each do |achievement| %>
			  <li class="section-item row mrl0">
			     <% if achievement.show_icon %>
			       <div class="icon-holder pull-left"> 
			        <i class="fa <%= achievement.icon %>" aria-hidden="true"></i>
			       </div>
			     <% end %>
			     <div class="input-holder">
			       <div class="form-group mb-0">
			           <textArea
			             type="string"
			             name="title"
			             class="form-control hide-show-control sub-header"
			             placeholder="What are you most proud of?"
			           ><%= achievement.title %></textArea>
			        </div>
			        <% if achievement.show_description %> 
				        <div class="form-group">
				           <textArea
				             type="string"
				             name="description"
				             class="form-control"
				             placeholder="A bit about your achievement"
				           ><%= achievement.description %></textArea>
				        </div>
				     <% end %>
			     </div>
			  </li>
			<% end %>
	     </ul>
	  </div>
	</section>
</div>