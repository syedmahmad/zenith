<section class="personal-info">
   <div class="row">
      <div class="col-sm-8 col-xs-8">
         <div class="info-details">
            <div class="full-name section-items-holder">
              <div class="form-group">
                <input
                  type="string"
                  name="name"
                  style="height: 41px;"
                  class="form-control primary_font"
                  placeholder="Full Name"
                  value="<%= @header.name %>"
                />
              </div>
            </div>
              <h3 class="job-title">
                <% if @header.show_job_title %>
                 <div class="form-group">
                    <input
                      type="string"
                      name="job_title"
                      class="form-control height-20 secondary-color primary_font"
                      placeholder="Job Title"
                      value="<%= @header.job_title %>"
                    />
                 </div>
                <% end %>
              </h3>
         </div>
         <div class="row">
            <div class="col-sm-6 col-xs-6">
              <% if @header.show_phone %>
               <div class="column">
                  <i class="fa fa-phone secondary-color" aria-hidden="true"></i>
                  <span>
                     <div class="form-group">
                        <input
                            type="number"
                            name="phone"
                            class="form-control height-20"
                            placeholder="Phone"
                            value="<%=@header.phone%>"
                          />
                     </div>
                  </span>
               </div>
              <% end %>
            </div>
            <div class="col-sm-6 col-xs-6">
              <% if @header.show_email %>
               <div class="column">
                  <i class="fa fa-envelope secondary-color" aria-hidden="true"></i>
                  <span>
                     <div class="form-group">
                        <input
                          type="string"
                          name="email"
                          class="form-control height-20"
                          placeholder="guest_150523877422@example.com"
                          value="<%=@header.email%>"
                        />
                     </div>
                  </span>
               </div>
              <% end %>
            </div>
            <div class="col-sm-6 col-xs-6">
              <% if @header.show_website_link %>
               <div class="column">
                  <i class="fa fa-link secondary-color" aria-hidden="true"></i>
                  <span>
                     <div class="form-group">
                        <input
                          type="string"
                          name="website_link"
                          class="form-control height-20"
                          placeholder="Website/Link"
                          value="<%=@header.website_link%>"
                        />
                     </div>
                  </span>
               </div>
              <% end %>
            </div>
            <div class="col-sm-6 col-xs-6">
              <% if @header.show_location %>
               <div class="column">
                  <i class="fa fa-map-marker secondary-color" aria-hidden="true"></i>
                  <span>
                     <div class="form-group">
                        <input
                          type="string"
                          name="location"
                          class="form-control height-20"
                          placeholder="location"
                          value="<%=@header.location%>"
                        />
                     </div>
                  </span>
               </div>
              <% end %>
            </div>
         </div>
      </div>
      <div class="col-sm-4 col-xs-4">
         <div class="profile-image">
          <% if @header.show_avatar %>
            <%= wicked_pdf_image_tag @header.avatar.url, :class => "img-responsive" %>
          <% end %>
         </div>
      </div>
   </div>
</section>