<div class="section-items col-md-12 col-xs-12 p0">
 <section class="section-items-holder">           
    <div class="heading-area">
       <h3>
          <div class="form-group">
             <input
               type="string"
               name="award_header"
               style="height: 30px;"
               class="form-control primary_font"
               placeholder="AWARDS"
               value="AWARDS"
             />
          </div>
       </h3>
    </div>
     <div class="section-items-list">
       <ul class="row mrl0">
         <% @resume.awards.each do |award| %>
           <li class="section-item row mrl0">
             <% if award.show_icon %> 
               <div class="icon-holder pull-left">
                  <i class="fa fa-trophy secondary-color" aria-hidden="true"></i>
               </div>
             <% end %>
             <div class="input-holder">
               <div class="form-group mb-0">
                 <textArea
                   type="string"
                   name="name"
                   class="form-control hide-show-control sub-header"
                   placeholder="Award Name"
                 ><%= award.name %></textArea>
               </div>
               <div class="form-group mb-0">
                 <% if award.show_icon %> 
                   <textArea
                     type="string"
                     name="description"
                     class="form-control"
                     placeholder="Award Description"
                   ><%= award.description %></textArea>
                 <% end %>
               </div>
             </div>
           </li>
         <% end %>
       </ul>
    </div>
 </section>
</div>